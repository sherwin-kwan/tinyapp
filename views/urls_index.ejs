<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/_head');  %> 
</head>
<body>
  <%- include('./partials/_header.ejs'); %>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Delete URL</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urlDatabase) { %>
          <tr>
            <td><%= url %></td>
            <td><%= urlDatabase[url] %></td>
            <td><form method="POST" action="/delete/<%= url %>">
              <input type="submit" class="btn btn-primary" value="Delete"></form>
            </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
  <!-- Bootstrap JS -->
  <footer>
    <%- include('./partials/_footer'); %>
  </footer>
  
</body>
</html>
